{
  "buildCommand": "npm run build",
  "functions": {
    "api/notion.js": {
      "maxDuration": 10
    },
    "api/metadata.js": {
      "maxDuration": 5
    },
    "api/contact.js": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/notion",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=300, stale-while-revalidate=600"
        }
      ]
    },
    {
      "source": "/api/metadata",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "s-maxage=60, stale-while-revalidate=120"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=86400, stale-while-revalidate=604800"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/linkedin",
      "destination": "https://www.linkedin.com/in/harmanpunn/",
      "permanent": true
    },
    {
      "source": "/github",
      "destination": "https://github.com/harmanpunn",
      "permanent": true
    },
    {
      "source": "/",
      "destination": "https://www.linkedin.com/in/harmanpunn/",
      "has": [
        {
          "type": "host",
          "value": "linkedin.harmanpunn.me"
        }
      ],
      "permanent": true
    },
    {
      "source": "/",
      "destination": "https://github.com/harmanpunn",
      "has": [
        {
          "type": "host",
          "value": "github.harmanpunn.me"
        }
      ],
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/:path*.json",
      "destination": "/:path*.json"
    },
    {
      "source": "/((?!api|_next|favicon.ico|static-data|assets|robots.txt|sitemap.xml|og-image.jpg|harmanpreetresume.pdf|placeholder.svg).*)",
      "destination": "/index.html"
    }
  ],
  "trailingSlash": false
} 