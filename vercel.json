{
  "functions": {
    "api/notion.js": {
      "maxDuration": 10
    }
  },
  "redirects": [
    {
      "source": "/linkedin",
      "destination": "https://www.linkedin.com/in/harmanpunn/",
      "permanent": true
    },
    {
      "source": "/github",
      "destination": "https://github.com/harmanpunn",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/blog",
      "destination": "/index.html"
    },
    {
      "source": "/blog/:slug",
      "destination": "/index.html"
    }
  ]
} 